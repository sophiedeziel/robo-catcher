<%= form_for @alolan do |f| %>
  <div class="row">
    <div class="robot-controls" style="position: fixed; z-index: 1000">
      <%= f.submit "Save", class: 'btn btn-primary btn-lg' %>
      <%= f.submit "Start", class: 'btn btn-success btn-lg' %>
      <%= link_to "Stop", stop_alolan_path, method: :post, class: 'btn btn-danger btn-lg' %>

      <div class="alolan-counts" >
        <h2 class="total">Total: <span class="number"><%= @alolan.total_tries %></span></h2>
        <h2 class="current">Current run: <span class="number"><%= @alolan.run_tries %></span></h2>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col col-sm-3">
    </div>
    <div class="col col-sm-9 ">
      <div style="position: relative; height: 480px">
        <img id="webcam" height="480" style="-webkit-user-select: none; position: absolute;" src="<%= Rails.env.production? ? request.protocol + request.host : 'http://raspberrypi.local' %>:8081"/>
        <%= image_tag 'aiming.png', style: "position: absolute;" %>
      </div>

      <br/>
      <br/>
      <br/>

      <div class="form-group mb-2">
        <%= f.label :pokemon %>
        <%= f.select :pokemon, ['Rattata', 'Grimer', 'Sandshrew', 'Raichu', 'Vulpix', 'Diglett', 'Geodude', 'Exeggutor', 'Marowak', 'Meowth'], {}, class:"form-control"  %>
      </div>

      <div class="form-group mb-2">
        <%= f.label :number %>
        <%= f.number_field :number, class: 'form-control col-2' %>
      </div>

      <div class="form-group">
        <%= f.label "Rattata range" %>
        <div class="form-row">
          <%= f.number_field :rattata_range_min, class:"form-control col-2" %>
          <%= f.number_field :rattata_range_max, class:"form-control col-2" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "Grimer range" %>
        <div class="form-row">
          <%= f.number_field :grimer_range_min, class:"form-control col-2" %>
          <%= f.number_field :grimer_range_max, class:"form-control col-2" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "Sandshrew range" %>
        <div class="form-row">
          <%= f.number_field :sandshrew_range_min, class:"form-control col-2" %>
          <%= f.number_field :sandshrew_range_max, class:"form-control col-2" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "Raichu range" %>
        <div class="form-row">
          <%= f.number_field :raichu_range_min, class:"form-control col-2" %>
          <%= f.number_field :raichu_range_max, class:"form-control col-2" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "Vulpix range" %>
        <div class="form-row">
          <%= f.number_field :vulpix_range_min, class:"form-control col-2" %>
          <%= f.number_field :vulpix_range_max, class:"form-control col-2" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "Diglett range" %>
        <div class="form-row">
          <%= f.number_field :diglett_range_min, class:"form-control col-2" %>
          <%= f.number_field :diglett_range_max, class:"form-control col-2" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "Geodude range" %>
        <div class="form-row">
          <%= f.number_field :geodude_range_min, class:"form-control col-2" %>
          <%= f.number_field :geodude_range_max, class:"form-control col-2" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "Exeggutor range" %>
        <div class="form-row">
          <%= f.number_field :exeggutor_range_min, class:"form-control col-2" %>
          <%= f.number_field :exeggutor_range_max, class:"form-control col-2" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "Marowak range" %>
        <div class="form-row">
          <%= f.number_field :marowak_range_min, class:"form-control col-2" %>
          <%= f.number_field :marowak_range_max, class:"form-control col-2" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "Meowth range" %>
        <div class="form-row">
          <%= f.number_field :meowth_range_min, class:"form-control col-2" %>
          <%= f.number_field :meowth_range_max, class:"form-control col-2" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :delay_1, "A pour parler" %>
        <%= f.number_field :delay_1, class:"form-control col-2" %>
      </div>

      <div class="form-group range-update">
        <%= f.label :delay_2, "Texte d'intro" %>
        <%= f.number_field :delay_2, class:"form-control col-2" %>
      </div>

      <div class="form-group range-update">
        <%= f.label :delay_3, "Texte d'intro 2 si nécessaire" %>
        <%= f.number_field :delay_3, class:"form-control col-2" %>
      </div>

      <div class="form-group range-update">
        <%= f.label "Oui ou Non" %>
        <%= f.number_field :delay_4, class:"form-control col-2" %>
      </div>

      <div class="form-group range-update">
        <%= f.label "(Liste des choix)" %>
        <%= f.number_field :delay_5, class:"form-control col-2" %>
      </div>

      <div class="form-group range-update">
        <%= f.label "Sélectionner pour l'échange" %>
        <%= f.number_field :delay_6, class:"form-control col-2" %>
      </div>

      <div class="form-group range-update">
        <%= f.label "Procéder à l'échange" %>
        <%= f.number_field :delay_7, class:"form-control col-2" %>
      </div>

      <div class="form-group range-update">
        <%= f.label "Animation d'envoie " %>
        <%= f.number_field :delay_8, class:"form-control col-2" %>
      </div>

      <div class="form-group range-update">
        <%= f.label "attendre après pas shiny" %>
        <%= f.number_field :delay_9, class:"form-control col-2" %>
      </div>

      <div class="form-group range-update">
        <%= f.label "Exception de stats record" %>
        <%= f.number_field :delay_10, class:"form-control col-2" %>
      </div>

      <div class="form-group range-update">
        <%= f.label "Texte de Résultat" %>
        <%= f.number_field :delay_11, class:"form-control col-2" %>
      </div>

      <div class="form-group range-update">
        <%= f.label "Texte de Résultat 2 si nécessaire" %>
        <%= f.number_field :delay_12, class:"form-control col-2" %>
      </div>
    </div>
  </div>
<% end %>

