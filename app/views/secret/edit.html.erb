<%= form_for @secret do |f| %>
  <div class="row">
    <div class="robot-controls" style="position: fixed; z-index: 1000">
      <%= f.submit "Save", class: 'btn btn-primary btn-lg' %>
    </div>
  </div>

  <div class="row">
    <div class="col col-sm-3">
    </div>
    <div class="col col-sm-9 ">
      <div class="form-group mb-2">
        <%= f.label :numero %>
        <%= f.password_field :numero, class: 'form-control col-2' %>
      </div>
      <div class="form-group mb-2">
        <%= f.label :twilio_sid %>
        <%= f.password_field :twilio_sid, class: 'form-control col-2' %>
      </div>
      <div class="form-group mb-2">
        <%= f.label :twilio_token %>
        <%= f.password_field :twilio_token, class: 'form-control col-2' %>
      </div>
      <div class="form-group mb-2">
        <%= f.label :cloudinary_key %>
        <%= f.password_field :cloudinary_key, class: 'form-control col-2' %>
      </div>
      <div class="form-group mb-2">
        <%= f.label :cloudinary_secret %>
        <%= f.password_field :cloudinary_secret, class: 'form-control col-2' %>
      </div>
    </div>
  </div>

<% end %>

