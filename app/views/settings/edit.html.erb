<%= form_for @setting, url: settings_path do |f| %>
  <div class="row">
    <div class="robot-controls" style="position: fixed; z-index: 1000">
      <%= f.submit "Save", class: 'btn btn-primary btn-lg' %>
    </div>
  </div>

  <div class="row">
    <div class="col col-sm-3">
    </div>
    <div class="col col-sm-9 ">

      <h2> Pour Twitter</h2>
      <div class="form-group form-check">
        <%= f.check_box :twitter_enabled, class: 'form-check-input' %>
        <%= f.label :twitter_enabled, "ActivÃ©" %>
      </div>
      <div class="form-group mb-2">
        <%= f.label :twitter_consumer_key %>
        <%= f.text_field :twitter_consumer_key, class: 'form-control col-2' %>
      </div>
      <div class="form-group mb-2">
        <%= f.label :twitter_consumer_secret %>
        <%= f.text_field :twitter_consumer_secret, class: 'form-control col-2' %>
      </div>
      <div class="form-group mb-2">
        <%= f.label :twitter_access_token %>
        <%= f.text_field :twitter_access_token, class: 'form-control col-2' %>
      </div>
      <div class="form-group mb-2">
        <%= f.label :twitter_token_secret %>
        <%= f.text_field :twitter_token_secret, class: 'form-control col-2' %>
      </div>

      <h2> Pour les SMS</h2>
      <div class="form-group mb-2">
        <%= f.label :numero %>
        <%= f.text_field :numero, class: 'form-control col-2' %>
      </div>
      <div class="form-group mb-2">
        <%= f.label :twilio_sid %>
        <%= f.text_field :twilio_sid, class: 'form-control col-2' %>
      </div>
      <div class="form-group mb-2">
        <%= f.label :twilio_token %>
        <%= f.text_field :twilio_token, class: 'form-control col-2' %>
      </div>

      <h2> Pour les images</h2>
      <div class="form-group mb-2">
        <%= f.label :cloudinary_key %>
        <%= f.text_field :cloudinary_key, class: 'form-control col-2' %>
      </div>
      <div class="form-group mb-2">
        <%= f.label :cloudinary_secret %>
        <%= f.text_field :cloudinary_secret, class: 'form-control col-2' %>
      </div>
    </div>
  </div>

<% end %>

