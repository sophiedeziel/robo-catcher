<%= form_for @starter do |f| %>
  <div class="row">
    <div class="robot-controls" style="position: fixed; z-index: 1000">
      <%= f.submit "Save", class: 'btn btn-primary btn-lg' %>
      <%= f.submit "Start", class: 'btn btn-success btn-lg' %>
      <%= link_to "Stop", stop_starter_path, method: :post, class: 'btn btn-danger btn-lg' %>

      <div class="starter-counts" >
        <h2 class="total">Total: <span class="number"><%= @starter.total_tries %></span></h2>
        <h2 class="current">En cours: <span class="number"><%= @starter.run_tries %></span></h2>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col col-sm-3">
    </div>
    <div class="col col-sm-9 ">
      <div style="position: relative; height: 480px">
        <img id="webcam" height="480" style="-webkit-user-select: none; position: absolute;" src="<%= Rails.env.production? ? request.protocol + request.host : 'http://raspberrypi.local' %>:8081"/>
        <%= image_tag 'aiming.png', style: "position: absolute;" %>
      </div>

      <br/>
      <br/>
      <br/>

      <div class="form-group mb-2">
        <%= f.label :pokemon %>
        <%= f.select :pokemon, ['Piplup', 'Turtwig', 'Chimchar'], {}, class:"form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label "Piplup range" %>
        <div class="form-row">
          <%= f.number_field :piplup_range_min, class:"form-control col-2" %>
          <%= f.number_field :piplup_range_max, class:"form-control col-2" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

