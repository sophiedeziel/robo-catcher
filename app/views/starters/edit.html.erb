<%= form_for @starter do |f| %>
  <div class="row">
    <div class="robot-controls" style="position: fixed; z-index: 1000">
      <%= f.submit "Save", class: 'btn btn-primary btn-lg' %>

      <%= f.submit "Start", class: 'btn btn-success btn-lg', disabled: $trash.busy? %>
      <%= f.submit "Reset", class: 'btn btn-success btn-lg', disabled: $trash.busy? %>
      <%= f.submit "Stop", class: 'btn btn-danger btn-lg', disabled: !$trash.busy? %>

      <div class="starter-counts" >
        <h2 class="total">Total: <span class="number"><%= @starter.total_tries %></span></h2>
        <h2 class="chimcar_total">Chimchar: <span class="number"><%= @starter.chimchar_total %></span></h2>
        <h2 class="turtwig_total">Turtwig: <span class="number"><%= @starter.turtwig_total %></span></h2>
        <h2 class="piplup_total">Piplup: <span class="number"><%= @starter.piplup_total %></span></h2>
        <h2 class="current">En cours: <span class="number"><%= @starter.run_tries %></span></h2>
      </div>
      <div class="button-status">
        <span class="a inactive">A</span>
        <span class="x inactive">X</span>
        <span class="up inactive">Haut</span>
        <span class="right inactive">Droite</span>
        <span class="home inactive">Home</span>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col col-sm-3">
    </div>
    <div class="col col-sm-9 ">
      <div style="position: relative; height: 480px">
      
        <canvas id="example" width="640" height="480" style="position: absolute;"></canvas>
        <img id="webcam" height="480" style="-webkit-user-select: none; position: absolute;" src="<%= Rails.env.production? ? '/webcam' : 'http://cr10s.local/webcam/?action=stream' %>"/>

        <%= image_tag 'aiming.png', style: "position: absolute;" %>
