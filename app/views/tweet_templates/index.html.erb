<p id="notice"><%= notice %></p>

<h1>Tweet Templates</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweet_templates.each do |tweet_template| %>
      <tr>
        <td><%= tweet_template.event %></td>
        <td><%= tweet_template.message %></td>
        <td><%= link_to 'Show', tweet_template %></td>
        <td><%= link_to 'Edit', edit_tweet_template_path(tweet_template) %></td>
        <td><%= link_to 'Destroy', tweet_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet Template', new_tweet_template_path %>
