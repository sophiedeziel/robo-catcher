#!/usr/bin/env ruby
require 'fileutils'
include FileUtils

# path to your application root.
APP_ROOT = File.expand_path('..', __dir__)

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

chdir APP_ROOT do
  # This script is a way to update your development environment automatically.
  # Add necessary update steps to this file.
  puts "\n== Updating codebase =="
  system! 'git pull'

  puts '== Installing dependencies =='
  system! 'gem install bundler --conservative'
  system('bundle check') || system!('bundle install')

  puts "\n== Symlinking nginx config =="
  system! 'rm /etc/nginx/nginx.conf'
  system! 'ln -s config/nginx.conf /etc/nginx/nginx.conf'

  # Install JavaScript dependencies if using Yarn
  puts "\n== Precompiling assets =="
  system('bin/rails assets:precompile RAILS_ENV=production')

  puts "\n== Updating database =="
  system! 'bin/rails db:migrate RAILS_ENV=production'

  puts "\n== Removing old logs and tempfiles =="
  system! 'bin/rails log:clear tmp:clear RAILS_ENV=production'

  puts "\n== Restarting application server =="
  system! 'systemctl daemon-reload'
  system! 'systemctl restart puma.service'
end
