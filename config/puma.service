[Unit]
Description=Rails Server
Requires=network.target

[Service]
User=pi
WorkingDirectory=/home/pi/robo-catcher
ExecStart=/home/pi/.rbenv/bin/rbenv exec bundle exec puma -C /home/pi/robo-catcher/config/puma.rb -e production -p 3000
TimeoutSec=200
RestartSec=15s
Restart=always

[Install]
WantedBy=multi-user.target
